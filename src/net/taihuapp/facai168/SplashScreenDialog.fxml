<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="700.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8.0.131" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.taihuapp.facai168.SplashScreenDialogController">
   <bottom>
      <TilePane alignment="CENTER" prefColumns="3" prefRows="1" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <CheckBox fx:id="mAgreeCheckBox" mnemonicParsing="false" text="I Agree.">
               <TilePane.margin>
                  <Insets bottom="5.0" left="5.0" right="50.0" top="5.0" />
               </TilePane.margin>
            </CheckBox>
            <Button fx:id="mContinueButton" mnemonicParsing="false" onAction="#handleContinue" text="Continue">
               <TilePane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </TilePane.margin>
            </Button>
            <Button fx:id="mStopButton" mnemonicParsing="false" onAction="#handleStop" text="Stop">
               <TilePane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </TilePane.margin>
            </Button>
         </children>
      </TilePane>
   </bottom>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="mShortTextArea" editable="false" prefHeight="210.0" VBox.vgrow="SOMETIMES">
               <VBox.margin>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TextArea>
            <TextArea fx:id="mGPLv3TextArea" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
               </VBox.margin>
            </TextArea>
            <TextArea fx:id="mThirdPartyTextArea" prefHeight="130.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
               </VBox.margin>
            </TextArea>
         </children>
      </VBox>
   </center>
</BorderPane>
